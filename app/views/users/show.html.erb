<h1 class="font-weight-bold my-5 text-center">Student Details</h1>

<div class="row">
  <div class="col-lg-6 mx-auto border bg-light p-4">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @user.phone %>
    </p>

    <p>
      <strong>Reason:</strong>
      <%= @user.reason %>
    </p>

    <p>
      <strong>Session:</strong>
      <%= @user.session %>
    </p>

    <%= link_to 'Back', users_path %>
  </div>
</div>
